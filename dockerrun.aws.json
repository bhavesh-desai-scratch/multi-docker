{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions":[
        {
            "name": "client",
            "image": "bhades/multi-client",
            "hostName": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "bhades/multi-server",
            "hostName": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "bhades/multi-worker",
            "hostName": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "bhades/multi-nginx",
            "hostName":"nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links":["client", "server"]
        }
    ]
}